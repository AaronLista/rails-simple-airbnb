<div class="mx-5">
  <div class="row d-flex justify-content-between">

    <div class="col-8">
      <div class="card w-95 mb-3 p-3">
        <h1><%= @flat.name %></h1>
        <p><%= @flat.address %></p>
      </div>
      <div class="card w-95 mb-3 p-3">
        <h2>A bit more about this flat...</h2>
        <p><%= @flat.description %></p>
      </div>
    </div>

    <div class="col-4 mb-3">
      <div class="card w-100 mb-3 p-3">
        <h2>Book this place!</h2>
        <form>
          <div class="input-group mb-3">
            <span class="input-group-text">From:</span>
            <input type="text" class="form-control" placeholder="dd/mm/yyyy" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text">to:</span>
            <input type="text" class="form-control" placeholder="dd/mm/yyyy" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <button class="btn btn-success w-100">Book</button>
        </form>
      </div>
      <div class="card mb-3 p-3">
        <h2>Details</h2>
        <i class="fa-solid fa-euro-sign"><%= @flat.price_per_night %></i>
        <%= @flat.number_of_guests %> people
      </div>
      <div class="card p-3">
        <div class="d-flex justify-content-between">
          <div>
            share
          </div>
          <div>
            <i class="fa-brands fa-instagram"></i>
            <i class="fa-brands fa-twitter"></i>
            <i class="fa-brands fa-facebook"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
